<div class="form-inputs col-5">
  <%= render "devise/shared/links" %>
</div>
<br/><br/>

<h5>New User? Sign Up Below.</h5>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-inputs col-5">
    <%= f.label :email, class: "col-form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-plaintext" %>

    <%= f.label :first_name, class: "col-form-label" %>
    <%= f.text_field :first_name, class: "form-control-plaintext" %>

    <%= f.label :last_name, class: "col-form-label" %>
    <%= f.text_field :last_name, class: "form-control-plaintext" %>

    <%= f.label :password, class: "col-form-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control-plaintext" %>

    <%= f.label :password_confirmation, class: "col-form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control-plaintext" %>

    <br/>
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
