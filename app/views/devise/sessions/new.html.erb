<h5>Log In</h5>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs col-5">
    <%= f.label :email, class: "col-form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-plaintext" %>

    <%= f.label :password, class: "col-form-label"%>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control-plaintext" %>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log In", class: "btn btn-info" %>
    </div>
  </div>
<% end %>

<br/><br/><br/>
