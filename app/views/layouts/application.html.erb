<!DOCTYPE html>
<html>
  <head>
    <title>ClockInOut</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-6">
          <div class="all-clock-events float-left">
            <%= link_to "Clock Events for All Users", root_path %>
          </div>
        </div>
        <% if current_user.blank? %>
          <div class="col-6">
            <div class="signup float-right">
              <%= link_to "Log In or Sign Up", new_user_registration_path %>
            </div>
          </div>
        <% else %>
          <div class="col-6">
            <div class="logout float-right">
              <%= link_to "Logout", destroy_user_session_path, method: :delete %></br>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <br/><br/>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
